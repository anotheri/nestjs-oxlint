{
  "$schema": "https://swc.rs/schema.json",
  "sourceMaps": true,
  "jsc": {
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "baseUrl": "./",
    "paths": {
      // "*": ["*", "src/*"],
      "@src/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "minify": false
}
